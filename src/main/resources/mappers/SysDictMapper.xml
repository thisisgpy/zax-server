<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ganpengyu.zax.dao.SysDictDao">
    <resultMap id="BaseResultMap" type="com.ganpengyu.zax.model.SysDict">
        <!--@mbg.generated-->
        <!--@Table sys_dict-->
        <id column="id" property="id"/>
        <result column="code" property="code"/>
        <result column="name" property="name"/>
        <result column="comment" property="comment"/>
        <result column="is_enabled" property="enabled"/>
        <result column="create_time" property="createTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="update_by" property="updateBy"/>
    </resultMap>

    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        id,
        code,
        `name`,
        `comment`,
        is_enabled,
        create_time,
        create_by,
        update_time,
        update_by
    </sql>

    <select id="selectById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        <!--@mbg.generated-->
        select
        <include refid="Base_Column_List"/>
        from sys_dict
        where id = #{id}
    </select>

    <select id="list" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_dict
        <where>
            <if test="condition.code != null">
                code like concat('%', #{condition.code}, '%')
            </if>
            <if test="condition.name != null">
                and `name` like concat('%', #{condition.name}, '%')
            </if>
            <if test="condition.enabled != null">
                and is_enabled = #{condition.enabled}
            </if>
        </where>
        order by create_time desc
        limit #{offset}, #{limit}
    </select>

    <select id="count" resultType="java.lang.Integer">
        select count(1)
        from sys_dict
        <where>
            <if test="code != null">
                code like concat('%', #{code}, '%')
            </if>
            <if test="name != null">
                and `name` like concat('%', #{name}, '%')
            </if>
            <if test="enabled != null">
                and is_enabled = #{enabled}
            </if>
        </where>
    </select>

    <delete id="delete" parameterType="java.lang.Integer">
        <!--@mbg.generated-->
        delete
        from sys_dict
        where id = #{id}
    </delete>

    <insert id="insert" parameterType="com.ganpengyu.zax.model.SysDict">
        <!--@mbg.generated-->
        insert into sys_dict (code, `name`, `comment`, is_enabled, create_time, create_by)
        values (#{code}, #{name}, #{comment}, #{enabled}, #{createTime}, #{createBy})
    </insert>

    <update id="updateSelective" parameterType="com.ganpengyu.zax.model.SysDict">
        update sys_dict
        <set>
            <if test="name != null">
                `name` = #{name},
            </if>
            <if test="comment != null">
                `comment` = #{comment},
            </if>
            <if test="enabled != null">
                is_enabled = #{enabled},
            </if>
            update_time = #{updateTime},
            update_by   = #{updateBy}
        </set>
        where id = #{id}
    </update>
</mapper>